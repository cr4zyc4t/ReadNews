<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="toanvq.recyclerview" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".volley.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubCategoryActivity"
            android:label="@string/title_activity_sub_category" >
        </activity>
        <activity
            android:name=".ListNewsActivity"
            android:label="@string/title_activity_list_news" >
        </activity>
        <activity
            android:name=".ReadActivity"
            android:label="@string/title_activity_read"/>
        <activity
            android:theme="@style/MaterialTabViewTheme"
            android:name=".SlidingTabActivity"
            android:label="@string/title_activity_sliding_tab">
        </activity>
    </application>

</manifest>
